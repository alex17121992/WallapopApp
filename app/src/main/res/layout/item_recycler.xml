<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_margin="25dp"
        android:id="@+id/card"
        android:background="@drawable/grandient">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="0dp"
            android:layout_marginRight="0dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_menu_camera"
                android:id="@+id/imgPro" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="8dp"
                android:layout_marginStart="0dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="208dp"
                android:layout_height="wrap_content" android:id="@+id/txtNombre"
                android:layout_alignParentStart="true" android:layout_below="@+id/imgPro"
                android:layout_marginTop="30dp" android:layout_marginStart="1dp"
                android:textSize="@dimen/fuentes_rv" android:textAlignment="center"/>
        <TextView
                android:text="Precio"
                android:layout_width="57dp"
                android:layout_height="wrap_content" android:layout_marginEnd="-65dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="35dp"
                android:layout_toStartOf="@+id/txtPrecio" android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="91dp"
                android:layout_height="wrap_content" android:id="@+id/txtPrecio"
                android:layout_alignParentStart="true" android:layout_below="@+id/imgPro"
                android:layout_marginTop="114dp" android:layout_marginStart="59dp"
                android:textSize="@dimen/fuentes_rv" android:textAlignment="center"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>